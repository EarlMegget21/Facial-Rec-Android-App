<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.backelite.mspr">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- pour glide -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- pour glide -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.backelite.mspr.application.MainApplication"
        android:theme="@style/TwitterTheme">
        <activity android:name="com.backelite.mspr.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.backelite.mspr.activities.StartActivity" />
        <activity android:name="com.backelite.mspr.activities.PictureActivity" />
        <activity android:name="com.backelite.mspr.activities.ThirdActivity" />
    </application>

</manifest>